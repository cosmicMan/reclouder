<div class="hero-unit">

<%= form_for resource, 
      as: resource_name, 
      url: registration_path(resource_name), 
      html: { class: 'form-horizontal', method: :put } do |f| %>
  <%= devise_error_messages! %>

  <legend>Edit <%= resource_name.to_s.humanize %></legend>

  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :password, class: 'control-label' do %>
      Password<br/>
      <small>(leave blank if you don't want to change it)</small>
    <% end %>
    
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, 'Confirm password', class: 'control-label' %>
    
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :current_password, class: 'control-label' do %>
      Current password<br/>
      <small>(we need your current password to confirm your changes)</small>
    <% end %>
    
    <div class="controls">
      <%= f.password_field :current_password %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update", class: 'btn btn-large btn-default' %>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
</div>